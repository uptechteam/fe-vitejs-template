{
  "root": true,
  "extends": [
    "hardcore",
    "hardcore/react",
    "hardcore/react-performance",
    "hardcore/react-testing-library",
    "hardcore/jest",
    "hardcore/fp",
    "hardcore/ts"
  ],
  "parserOptions": {
    "project": true
  },
  "env": {
    "browser": true
